{# templates/user/account.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block body %}
    <div class="container w-1/3 m-auto">
        <form method="post">
            <h1 class="h3 mb-3">
                Mon compte</h1>
            <div class="VBox">
                <label for="inputLogin">
                    <i class="fas fa-user"></i>
                    Identifiant</label>
                <input type="text" value="{{ user.login }}" name="login" id="inputLogin" class="form-control"
                       autocomplete="username" required autofocus readonly>
                <label for="inputEmail">
                    <i class="fas fa-envelope"></i>
                    Email</label>
                <input type="email" name="email" id="inputEmail" value="{{ user.email }}" class="form-control"
                       autocomplete="current-password"
                       required readonly>

                {% if user.is_verified == false %}
                    <div class="alert-static bg-yellow-100 text-yellow-600 mt-2">
                        <i class="fas fa-exclamation-triangle"></i>
                        Votre compte n'est pas encore vérifié. Merci de vérifier
                        votre boîte
                        mail.
                    </div>
                {% endif %}

                <a href="{{ path('app_logout') }}"
                   class="transition rounded-md px-4 py-2 danger mt-3 flex justify-center items-center">
                    Se déconnecter
                    <i class="fas fa-sign-out-alt ml-2"></i>
                </a>
            </div>
        </form>
    </div>
{% endblock %}
