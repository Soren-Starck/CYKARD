{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container flex flex-col m-auto w-full lg:w-1/3">

        <h1 class="mb-3">S'inscrire</h1>

        {% if errors %}
            <div class="alert alert-danger">
                {% for error in errors %}
                    <p>{{ error }}</p>
                {% endfor %}
            </div>
        {% endif %}

        <form method="post" class="flex flex-col gap-1">
            <label for="login">
                <i class="fas fa-user"></i>
                Identifiant</label>
            <input type="text" name="login" id="login" required>

            <label for="email">
                <i class="fas fa-envelope"></i>
                Email</label>
            <input type="email" name="email" id="email" required>

            <label for="password">
                <i class="fas fa-lock" id="togglePassword"></i>
                Mot de passe</label>
            <input type="password" name="password" id="password" required>

            <label for="agreeTerms" class="mb-3">
                <input type="checkbox" name="agreeTerms" id="agreeTerms" required>
                J'accepte les conditions d'utilisation
            </label>

            <button type="submit">
                <i class="fas fa-user-plus"></i>
                S'inscrire</button>
            <a class="link mt-3 text-sm" href="{{ path('app_login') }}">Déjà inscrit ?</a>
        </form>
    </div>
{% endblock %}