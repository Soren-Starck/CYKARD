{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container w-full lg:w-1/3 m-auto">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageData}}</div>
            {% endif %}

            <h1 class="h3 mb-3">Connectez vous</h1>
            <div class="VBox">
                <label for="inputLogin">
                    <i class="fas fa-user"></i>
                    Identifiant*</label>
                <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control"
                       minlength="1"
                       maxlength="255"
                       autocomplete="username" required autofocus>
                <label for="inputPassword">
                    <i class="fas fa-lock"></i>
                    Mot de passe*</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password"
                       minlength="1"
                       maxlength="255"
                       required>

                <div class="checkbox hover:cursor-pointer mb-2 flex flex-row items-center">
                    <input type="checkbox" name="_remember_me">
                    <label class="ml-1">Rester connect√©</label>
                </div>
            </div>

            <button class="btn btn-lg btn-primary flex justify-center w-full mb-3" type="submit">
                <i class="fas fa-sign-in-alt mr-2 mt-1"></i>
                Se connecter
            </button>
            <div class="flex justify-between mt-3 text-sm">
            <a class="link" href="{{ path('app_register') }}">Pas encore inscrit ?</a>
                <label>*requis</label>
            </div>
        </form>
    </div>
{% endblock %}
