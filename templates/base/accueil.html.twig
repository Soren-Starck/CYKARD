{% extends 'base.html.twig' %}

{% block title %}{{ pagetitle }}{% endblock %}

{% block body %}
    <div class="my-auto flex flex-col xl:flex-row justify-center gap-5 h-full">
        <div class="my-auto mx-auto xl:mx-0 w-full xl:w-1/2">
            <div class="text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl whitespace-nowrap">
                <p>Bienvenue sur
                    <strong class="bg-clip-text bg-gradient-to-r from-cyan-600 to-blue-600 text-transparent">
                        BLYAT-CARD
                    </strong>
                </p>
            </div>
            <p class="my-2 text-lg lg:text-xl xl:text-2xl">
                Créer vos propres tableaux de cartes et partager les avec la communauté.
            </p>
            <div class="mx-auto">
                {% if is_user_logged_in() %}
                    <div class="flex flex-row justify-start gap-4 my-3">
                        <a class="text-lg lg:text-xl xl:text-2xl whitespace-nowrap transition border-2 font-medium border-neutral-900 rounded-md shadow text-neutral-900 px-4 py-2 flex flex-row items-center gap-2 hover:bg-neutral-900 hover:text-gray-50 justify-center"
                           href="{{ path('app_tableaux') }}">Voir mes tableaux</a>
                    </div>
                {% else %}
                    <div class="flex flex-row justify-start gap-4 my-3">
                        <a class="text-lg lg:text-xl xl:text-2xl whitespace-nowrap transition bg-neutral-900 hover:bg-neutral-700 text-gray-50 rounded-md shadow font-medium px-4 py-2"
                           href="{{ path('app_login') }}">Connectez vous</a>
                        <a class="text-lg lg:text-xl xl:text-2xl whitespace-nowrap transition border-2 font-medium border-neutral-900 rounded-md shadow text-neutral-900 px-4 py-2 flex flex-row items-center gap-2 hover:bg-neutral-900 hover:text-gray-50 justify-center"
                           href="{{ path('app_register') }}">Inscrivez vous</a>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="my-auto w-full xl:w-1/2 h-[150px] xl:h-[300px] mb-[350px] flex flex-col items-center justify-center relative select-none transform scale-100 lg:scale-110 xl:scale-125">
            <div class="blob blobA bg-cyan-500"></div>
            <div class="blob blobB bg-blue-600"></div>
            <div class="blob blobC bg-sky-500"></div>

            <div class="z-10 flex flex-row mt-[250px]">

                <div class="flex flex-col mr-4">

                    <div class="mt-6 mb-4 group relative p-6 bg-white flex flex-col overflow-hidden shadow rounded-md border w-full h-fit justify-around items-center">
                        <a class="h-full w-full flex justify-around items-center">
                            <div>
                                <h2 class="mr-auto">SAE Semestre 4</h2>
                            </div>
                            <div class="absolute top-1 right-2 text-neutral-700 invisible">
                                <a>
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a>
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </a>
                    </div>

                    <div class="group relative p-4 bg-white flex flex-col shadow rounded-md border w-[200px] justify-around items-center">
                        <a class="h-full w-full flex justify-around items-center">
                            <div>
                                <div class="flex flex-row justify-start">
                                    <img src="https://www.lirmm.fr/~trombetton/photos/photo_tyrol.jpg"
                                         alt="Profile Image" class="w-16 h-16 border  rounded-full">
                                    <p class="m-auto ml-2">Gilles Trombettoni</p>
                                </div>
                                <p class="text-sm text-neutral-500 italic mt-2">"Un outil encore jamais vu en France
                                    !"</p>
                            </div>
                        </a>
                    </div>

                </div>

                <div class="flex flex-col w-[200px]">

                    <div class="mb-4 group relative p-4 bg-white flex flex-col shadow rounded-md border  justify-around items-center">
                        <a class="h-full w-full flex justify-around items-center">
                            <div>
                                <div class="flex flex-row justify-start">
                                    <img src="https://lastfm.freetls.fastly.net/i/u/ar0/92c372883f05137bb7c6e9ec49afe403.jpg"
                                         alt="Profile Image" class="w-16 h-16 border  rounded-full">
                                    <p class="m-auto">Rick Astley</p>
                                </div>
                                <p class="text-sm text-neutral-500 italic mt-2">"I love CYKARD, those guys will
                                    never
                                    give you up !"</p>
                            </div>
                        </a>
                    </div>

                    <div class="group relative p-6 bg-white flex flex-col overflow-hidden shadow rounded-md border w-full h-fit justify-around items-center">
                        <a class="h-full w-full flex justify-around items-center">
                            <div>
                                <h2 class="mr-auto">Je sais pas quoi mettre ici</h2>
                            </div>
                            <div class="absolute top-1 right-2 text-neutral-700 invisible">
                                <a>
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a>
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </a>
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}