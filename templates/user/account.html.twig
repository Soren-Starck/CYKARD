{# templates/user/account.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block body %}
    <h1>My Account</h1>

    <p>Nom: {{ app.user.nom }}</p>
    <p>Prenom: {{ app.user.prenom }}</p>

    <p>Username: {{ app.user.login }}</p>
    <p>Email: {{ app.user.email }}</p>

    <a href="{{ path('app_account_edit') }}">Edit</a>
    <a href="{{ path('app_account_delete') }}">Delete</a>
{% endblock %}